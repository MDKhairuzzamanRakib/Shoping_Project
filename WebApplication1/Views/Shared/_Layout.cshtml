<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <environment include="Development">
        <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
        <script src="~/lib/jquery/jquery.js"></script>
        <link href="~/lib/fontawesome/css/font-awesome.css" rel="stylesheet" />
    </environment>

    <script type="text/javascript">
        function LoadData(categoryId = null) {
            var skillContainer = $("#skillContainer");
            $.ajax({
                url: "/Products/AddNewCategory/" + categoryId ?? "",
                type: "GET",
                success: function (data) {
                    skillContainer.append(data);
                }
            });
        }
    </script>
</head>
<body>


    <nav class="navbar navbar-expand-lg" style="background-color: #7431F9; color:white;">
        <div class="container">
            <a class="navbar-brand" href="#" style="color:white;">IsDB_WADA</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Home","Index","Home",new{},new{@class="nav-link",style="color:white;"})
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Categories","Index","Categories",new{},new{@class="nav-link",style="color:white;"})
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Products","Index","Products",new{},new{@class="nav-link",style="color:white;"})
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Shopping","Index","Shopping",new{},new{@class="nav-link",style="color:white;"})
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-2">
        @RenderBody()
    </div>
    <footer class="container">
        <p class="text-center">&copy; @DateTime.Now.Year - www.isdb-bisew.org</p>
    </footer>


    <environment include="Development">
        <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
        <script src="~/lib/jquery-validation/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation/jquery.validate.unobtrusive.js"></script>
    </environment>
</body>
</html>
