@model IEnumerable<WebApplication1.Models.Product>
@{
    ViewData["Title"] = "AddProduct";
}

<h1 class="text-center alert alert-primary">Add Product</h1>


<div class="d-flex justify-content-end">
    <a asp-action="Create" asp-controller="AddNewProducts" class="btn btn-primary btn-sm mb-2"><i class="fa fa-plus-circle"></i> Add New Product</a>
</div>

<div class="row">
    @if (TempData["msg"] != null)
    {
        <h4 class="alert alert-primary">@TempData["msg"]</h4>
    }
</div>

<div class="row">
    <table class="table table-bordered table-striped table-sm">
        <thead class="text-center table-warning">
            <tr>
                <th width="10%">Product Name</th>
                <th width="7%">Unit</th>
                <th width="5%">Price</th>
                <th width="5%">Quantity</th>
                <th width="10%">Image</th>
                <th width="10%">Image Path</th>
                <th width="18%">Descriptions</th>
                <th width="10%">Category</th>
                <th width="25%">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(x=>item.Name)</td>
                    <td>@Html.DisplayFor(x=>item.Unit) Pieces</td>
                    <td>@Html.DisplayFor(x=>item.Price)</td>
                    <td>@Html.DisplayFor(x=>item.Quantity)</td>
                    <td><img src="@item.Image" width="100" /></td>
                    <td>@Html.DisplayFor(x=>item.Image)</td>
                    <td>@Html.DisplayFor(x=>item.Description)</td>
                    @foreach (var i in item.ProductCategories)
                    {
                        <td>@Html.DisplayFor(x=>i.Category.CategoryName)</td>
                    }
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a> |
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>